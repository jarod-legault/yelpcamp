<% include ../partials/header %>

<div class="row justify-content-center">
    <div class="col-md-12 text-center">
        <h1 style="text-align: center">Edit <%= campground.name %></h1>
    </div>
    <div class="col-8 col-sm-10 col-md-8 col-lg-6">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Campgound Name</label>
                <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>" autofocus></input>
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input class="form-control" type="number" name="campground[price]" value="<%= parseFloat(campground.price.replace(/,/g, '')).toFixed(2) %>" min="0.01" step="0.01"></input>
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>"></input>
            </div>
            <div class="form-group">
                <label for="image">Current Image</label>
                <div class="card">
                    <img class="card-img-top" src="<%= campground.image %>" alt="<%= campground.name %>">
                </div>
            </div>
            <div class="form-group">
                <label for="image">Select New Image</label>
                <input type="file" id="image" name="image" accept="image/*" required></input>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input class="form-control" type="text" name="campground[description]" value="<%= campground.description %>"></input>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
    
    
</div>
<% include ../partials/footer %>