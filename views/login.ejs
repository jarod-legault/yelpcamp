<% include ./partials/header %>

<div class="row">
    <h1 class="login-header">Login!</h1>
    <div class="login-form">
        <form action="/login" method="POST">
            <label for="username">Username</label>
            <div class="form-group"><input class="form-control" type="text" name="username" placeholder="username" autofocus></input></div>
            <label for="password">Password</label>
            <div class="form-group"><input class="form-control" type="password" name="password" placeholder="password"></input></div>
            <button class="btn btn-lg btn-primary btn-block">Login</button>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<% include ./partials/footer %>