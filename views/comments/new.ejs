<% include ../partials/header %>

<div class="row">
    <div class="col-md-12 text-center">
        <h1 style="text-align: center">Add New Comment to <%= campground.name %></h1>
    </div>
    <div style="width: 30%; margin: 25px auto">
        <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
            <label for="comment[text]">Comment</label>
            <div class="form-group"><textarea class="form-control" name="comment[text]" placeholder="text" rows="10" autofocus></textarea></div>
            <div class="form-group"><button class="btn btn-lg btn-primary btn-block">Submit!</button></div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
    
    
</div>
<% include ../partials/footer %>